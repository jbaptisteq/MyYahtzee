{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="">
            <h1 class="h3 mb-3 font-weight-normal loginFormTitle spacer">S'enregistrer</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {'label': false, 'attr': {'class': 'form-control loginForm spacer', 'placeholder': 'Username'}}) }}
                {{ form_row(registrationForm.password.first, {'label': false, 'attr': {'class': 'form-control loginForm spacer', 'placeholder': 'Password'}}) }}
                {{ form_row(registrationForm.password.second, {'label': false, 'attr': {'class': 'form-control loginForm spacer', 'placeholder': 'Password'}}) }}
                {{ form_row(registrationForm.email, {'label': false, 'attr': {'class': 'form-control loginForm spacer', 'placeholder': 'Email'}}) }}
                <button class="btn btn- btn-primary loginForm spacer">S'enregistrer</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
