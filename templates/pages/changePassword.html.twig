{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="h3 mb-3 font-weight-normal loginFormTitle spacer">Changement de mot de Passe</h1>
            {{ form_start(changePasswordForm) }}
            {{ form_row(changePasswordForm.password.first, {'label': false, 'attr': {'class': 'form-control loginForm spacer', 'placeholder': 'Password'}}) }}
            {{ form_row(changePasswordForm.password.second, {'label': false, 'attr': {'class': 'form-control loginForm spacer', 'placeholder': 'Password'}}) }}
                <button class="btn btn- btn-primary loginForm spacer">Changer</button>
            {{ form_end(changePasswordForm) }}
        </div>
    </div>
</div>
{% endblock %}
